# ═══════════════════════════════════════════════════════════════
# Synthia 4.2 - The Pauli Effect
# Environment Configuration Template
# Copy this to .env and fill in your values
# ═══════════════════════════════════════════════════════════════

# ─── Agent Identity ─────────────────────────────────────────
AGENT_NAME=Pauli
AGENT_VERSION=4.2.0
ORGANIZATION=The Pauli Effect

# ─── LLM Configuration ─────────────────────────────────────
OLLAMA_HOST=http://localhost:11434
DEFAULT_VISION_MODEL=llama3.2-vision
DEFAULT_CODE_MODEL=qwen2.5-coder

# ─── API Keys (optional, for cloud LLM fallback) ───────────
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ─── Voice Collaboration ───────────────────────────────────
ENABLE_VOICE_COLLABORATION=true
DEFAULT_VOICE_TYPE=pauli_default
ELEVENLABS_API_KEY=

# ─── Redis ─────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── Celery Task Queue ────────────────────────────────────
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ─── Supabase (optional) ──────────────────────────────────
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# ─── Stripe (optional) ────────────────────────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ─── Feature Flags ────────────────────────────────────────
ENABLE_AWWWARDS_SCRAPING=true
ENABLE_AGENT_LIGHTNING=true
ENABLE_AUTO_DEPLOYMENT=false
ENABLE_MCP_TOOLS=true

# ─── Twilio (Voice Calls + WhatsApp) ──────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_NUMBER=
VOICE_WEBHOOK_URL=https://your-domain.ngrok.io

# ─── Telegram Notifications ───────────────────────────────
TELEGRAM_BOT_TOKEN=

# ─── Notification Recipients (JSON array) ─────────────────
# Format: [{"type":"telegram","id":"123456"},{"type":"whatsapp","id":"+1234567890"}]
NOTIFICATION_RECIPIENTS=[]

# ─── Dashboard Sync ──────────────────────────────────────
DASHBOARD_WEBHOOK_URL=

# ─── Deployment ───────────────────────────────────────────
COOLIFY_URL=
COOLIFY_API_TOKEN=
VERCEL_TOKEN=
DEPLOY_TARGET=coolify
